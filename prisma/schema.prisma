generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int    @id @default(autoincrement())
  first_name String @db.VarChar(20)
  last_name  String @db.VarChar(20)
  email      String @unique @db.VarChar(30)
  age        Int    @db.TinyInt
  grade      String @db.VarChar(20)
  courses    String
}

